// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())
  name    String
  Results Results[]
}

model Station {
  id         Int    @id @default(autoincrement())
  markerName String
  markerPath String
  text       String
}

model Animation {
  id          Int    @id @default(autoincrement())
  coordinates Int[]
  animation   String
}

model Results {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  time   Int
}
